<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F8E0"
    android:padding="16dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Usere"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner"
        android:padding="8dp" />

    <!-- Search Module -->
    <EditText
        android:id="@+id/search_module"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/profile_name"
        android:layout_marginTop="16dp"
        android:hint="Search Module"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/search_background"
        android:drawableRight="@drawable/ic_search" />


    <!-- Home Module Button -->
    <Button
        android:id="@+id/home_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_module"
        android:layout_marginTop="16dp"
        android:text="HOME MODULE"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Work Module Button -->
    <Button
        android:id="@+id/work_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_module"
        android:layout_marginTop="16dp"
        android:text="WORK MODULE"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Add Module Button -->
    <Button
        android:id="@+id/add_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_module"
        android:layout_marginTop="16dp"
        android:text="+ MODULE"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#004D00">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_drink"
            android:padding="16dp" />
    </LinearLayout>
</RelativeLayout>
